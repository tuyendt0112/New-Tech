<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>{{post.title}}</h1>

    <p>{{post.content}}</p>
  
    {{#if post.comments}}

      {{#each post.comments}}
        {{this.author}}:
        {{this.comment}}
        </br>
      {{/each}}
    {{else}}
      <p>No Comment</p>
    {{/if}}

    <form action="/comment/{{post.id}}" method="POST">
      <input type="text" name="author" placeholder="author" required /><br
      />
      <textarea
        name="comment"
        placeholder="comment"
        required
      ></textarea><br />
      <button type="submit">Submit</button>
    </form>

  </body>
</html>