<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
    <title>Document</title>
  </head>
  <body>
    <div>
      <h1>Jezztom's Blog </h1>
      

      </div class="container">
      {{#each posts}}
        <div class="post">
          <h2>{{this.title}}</h2>
          <p>{{this.content}}</p>
          <div class="btn-crud"> 
          
          <form action="" method="post" class="btn">
            <button type="submit"><a href="/post/{{this.id}}">Detail</a></button>
          </form>
          <form action="/delete" method="post" class="btn">
            <input type="text" hidden value="{{this.id}}" name="id" />
            <button type="submit"> Delete </button>
          </form>

          <form action="" method="post" class="btn">
            <button type="submit"><a href="/edit/{{this.id}}">Edit </a></button>
          </form>
          
        </div>
      {{/each}}
    </div>

    <div class="post-blog">
      <form action="/" method="POST">
        <div><input type="text" name="title" placeholder="Title" required /></div>
        
        </br>
         <div><textarea class="content" name="content" placeholder="Content" required></textarea></div>
        <div style="padding: 10px;"> <button type="submit">post</button></div>
       
      </form>
    </div>
  </body>
</html>